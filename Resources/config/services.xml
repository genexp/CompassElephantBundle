<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cypress_compass_elephant.binary.class">CompassElephant\CompassBinary</parameter>
        <parameter key="cypress_compass_elephant.project_collection.class">Cypress\CompassElephantBundle\Collection\CompassProjectCollection</parameter>
        <parameter key="cypress_compass_elephant.command_caller.class">CompassElephant\CommandCaller</parameter>
        <parameter key="cypress_compass_elephant.project.class">CompassElephant\CompassProject</parameter>
        <parameter key="cypress_compass_elephant.listener.class">Cypress\CompassElephantBundle\Listener\CypressCompassRequestListener</parameter>
    </parameters>

    <services>
        <service id="cypress_compass_elephant.compass_binary"
                 class="%cypress_compass_elephant.binary.class%"
                 public="false">
            <argument>%cypress_compass_elephant.compass_binary_path%</argument>
        </service>

        <service id="cypress_compass_elephant.project_collection" class="%cypress_compass_elephant.project_collection.class%">
            <argument type="service" id="cypress_compass_elephant.compass_binary" />
            <argument>%cypress_git_elephant.compass_projects%</argument>
        </service>

        <service id="cypress_compass_elephant.listener" class="%cypress_compass_elephant.listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" />
            <call method="updateCompass">
                <argument type="service" id="cypress_compass_elephant.project_collection" />
            </call>
        </service>

